<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GigHub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add New Gig", "Create", "Gigs")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @RenderBody()


        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -GigHub</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/x-template" id="notification-template">
        <ul>
            <%
            _.each(notifcations,function(notifcation){

            if(notifcation.type == 1){%>
            <li> <%=notifcation.gig.artist.name %> has Canceled the gig at <%=notifcation.gig.location%> at <%=notifcation.gig.dateTime%></li>
            <%}

            else if(notifcation.type == 2){
                        var changes = [], oldValues = [], newValues = [];

                        if( notifcation.oldLocation != notifcation.gig.location ){
                            changes.push('location');
                            oldValues.push(notifcation.oldLocation);
                            newValues.push(notifcation.gig.location);
                        }

                        if(notifcation.oldDateTime != notifcation.gig.dateTime){
                            changes.push('date/time');
                            oldValues.push(notifcation.oldDateTime);
                            newValues.push(notifcation.gig.dateTime);
                        } 
                         %>

                    <li><%= notifcation.gig.artist.name %> has Updated the <%= changes.join(' and ') %>  of the gig from <%= oldValues.join('/')%> to <%= newValues.join('/') %></li>
                <%
                }

            })
            %>
        </ul>
    </script>
</body>
</html>
