<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GigHub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add New Gig", "Create", "Gigs")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @RenderBody()


        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -GigHub</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/Lib")
    @RenderSection("scripts", required: false)

    @*//type="text/x-template" to make browser Ignore script to be able to write Underscore *@
    <script type="text/x-template" id="notification-template">
        <ul class="notifications">
            <%
            _.each(notifcations,function(notifcation){

            if(notifcation.type == 1){%>
            <li><span class="highlight"> <%=notifcation.gig.artist.name %></span> has Canceled the Gig at <%=notifcation.gig.location%> at <%=moment(notifcation.gig.dateTime).format(' Do MMM HH:mm')%></li>
            <%}

            else if(notifcation.type == 2){
                        var changes = [], oldValues = [], newValues = [];

                        if( notifcation.oldLocation != notifcation.gig.location ){
                            changes.push('location');
                            oldValues.push(notifcation.oldLocation);
                            newValues.push(notifcation.gig.location);
                        }

                        if(notifcation.oldDateTime != notifcation.gig.dateTime){
                            changes.push('date/time');
                            oldValues.push(moment(notifcation.oldDateTime).format(' Do MMM HH:mm'));
                            newValues.push(moment(notifcation.gig.dateTime).format(' Do MMM HH:mm'));
                        } 
                         %>

                    <li><span class="highlight"> <%=notifcation.gig.artist.name %> </span> has Updated the <%= changes.join(' and ') %>  of the Gig <strong>from</strong> <%= oldValues.join(' / ')%> <strong>to</strong> <%= newValues.join('/') %></li>
                <%
                }

            })
            %>
        </ul>
    </script>
</body>
</html>
