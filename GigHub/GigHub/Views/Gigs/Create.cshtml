@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Add a Gig</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(model => model.Location, new { htmlAttributes = new { @class = "control-lable" } })

        @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location" } })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Date)
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Time)
        @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", @placeholder = "Time" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.GenreId)
        @Html.DropDownListFor(model => model.GenreId, new SelectList(Model.Genres, "Id", "Name"), "",  new { @class = "form-control" } )
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>